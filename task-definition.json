{
  "family": "app-task-definition",
  "cpu": "4096",
  "memory": "8192",
  "networkMode": "awsvpc",
  "taskRoleArn": "todo_taskRoleArn",
  "executionRoleArn": "todo_executionRoleArn",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "PLACEHOLDER_IMAGE", 
      "portMappings": [
        {
          "hostPort": 4000,
          "protocol": "tcp",
          "containerPort": 4000
        }
      ],
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/app-log-group",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "requiresCompatibilities": ["FARGATE"]
}
